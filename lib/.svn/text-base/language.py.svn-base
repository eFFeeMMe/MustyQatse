#!/usr/bin/env python
import os
from ConfigParser import ConfigParser

parser = ConfigParser()

def load(language="en-US"):
    filePath = os.path.abspath(os.path.join(os.path.abspath("data"), "languages", language + ".config"))
    parser.readfp(open(filePath))

get = parser.get
def getSection(section):
    return tuple(item[1] for item in parser.items(section))